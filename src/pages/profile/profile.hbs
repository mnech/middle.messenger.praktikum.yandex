<div>
  {{{navbar}}}
  <div class="{{styles.container}}">
    {{#if isLoading}}
    Loading...
    {{else}}
    <div class="{{styles.avatar}}">
      <img src={{avatar}} alt="user photo" class="{{styles.photo}}">
      <label for="file" class="{{styles.upload}}">Choose photo</label>
      <input type="file" name="avatar" id="file" class="{{styles.file}}">
    </div>
    <div class="{{styles.name}}">{{name}}</div>
    {{{content}}}
    {{/if}}
  </div>
</div>
</div>
