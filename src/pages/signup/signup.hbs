<div class="{{styles.auth}}">
  <div class="{{styles.container}}">
    <h1 class="{{styles.title}}">{{title}}</h1>
    <form class="{{styles.form}}" action="#">
      {{{email}}}
      {{{login}}}
      {{{firstName}}}
      {{{secondName}}}
      {{{phone}}}
      {{{password}}}
      {{{button}}}
    </form>
    <p class="{{styles.question}}">
      {{question}}
      <a href={{link}}><span class="{{styles.link}}">{{linkText}}</span></a>
    </p>
  </div>
</div>
